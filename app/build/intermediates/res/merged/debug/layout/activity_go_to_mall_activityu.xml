<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junhee.weatherparse.activity.GoToMallActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/goToMall_banner_1"
                android:layout_width="328dp"
                android:layout_height="110dp"
                android:clickable="true"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_banner_2"
                app:layout_constraintRight_toRightOf="@+id/goToMall_banner_2"
                app:layout_constraintTop_toBottomOf="@+id/textView28"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/goToMall_banner_2"
                android:layout_width="328dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_banner_3"
                app:layout_constraintRight_toRightOf="@+id/goToMall_banner_3"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_banner_1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/goToMall_banner_3"
                android:layout_width="328dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_banner_4"
                app:layout_constraintRight_toRightOf="@+id/goToMall_banner_4"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_banner_2"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/goToMall_banner_4"
                android:layout_width="328dp"
                android:layout_height="110dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_banner_3"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:paddingBottom="13dp"
                android:paddingTop="19dp"
                android:text="@string/fashion_detail_goToMall"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/goToMall_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/icon_back" />

            <ImageView
                android:id="@+id/goToMall_bottom_img"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/goToMall_Top_img"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_marginEnd="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="13dp"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintLeft_toRightOf="@+id/goToMall_bottom_img"
                app:layout_constraintRight_toLeftOf="@+id/goToMall_shoes_img"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/goToMall_shoes_img"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="13dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/goToMall_bottom_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="슬림핏 슬랙스"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_bottom_img"
                app:layout_constraintRight_toRightOf="@+id/goToMall_bottom_img"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_bottom_img" />

            <TextView
                android:id="@+id/goToMall_top_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="린넨 슬릿 라운드"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_Top_img"
                app:layout_constraintRight_toRightOf="@+id/goToMall_Top_img"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_Top_img" />

            <TextView
                android:id="@+id/goToMall_shoes_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cross Detail 샌들"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/goToMall_shoes_img"
                app:layout_constraintRight_toRightOf="@+id/goToMall_shoes_img"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_shoes_img" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/goToMall_top_txt"
                app:srcCompat="@mipmap/icon_line"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="SPA 브랜드 둘러보기"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>





